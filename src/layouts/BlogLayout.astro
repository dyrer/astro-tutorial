---
import Layout from './Layout.astro';

const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title}>
	<div class="max-w-3xl mx-auto px-4 py-12">
		<div class="mb-8 pb-4 border-b border-secondary-200">
			<h1 class="text-4xl font-bold text-dark-900 mb-2">{frontmatter.title}</h1>
			<p class="text-secondary-600 mb-4">{new Date(frontmatter.date).toLocaleDateString('el-GR', {
				year: 'numeric',
				month: 'long',
				day: 'numeric'
			})}</p>
			{frontmatter.tags && (
				<div class="flex flex-wrap gap-2 mt-4">
					{frontmatter.tags.map((tag) => (
						<span class="bg-primary-50 text-primary-700 px-3 py-1 rounded-full text-sm">{tag}</span>
					))}
				</div>
			)}
		</div>
		<div class="prose prose-lg max-w-none">
			<slot />
		</div>
	</div>
</Layout>

<style is:global>
	.prose h2 {
		font-size: 1.8rem;
		margin-top: 2rem;
		margin-bottom: 1rem;
		color: #1f2937;
	}
	.prose h3 {
		font-size: 1.5rem;
		margin-top: 1.5rem;
		margin-bottom: 1rem;
		color: #1f2937;
	}
	.prose p {
		margin-bottom: 1.5rem;
		color: #4b5563;
	}
	.prose img {
		max-width: 100%;
		border-radius: 0.5rem;
		margin: 1.5rem 0;
	}
	.prose blockquote {
		border-left: 4px solid #d1d5db;
		padding-left: 1rem;
		font-style: italic;
		margin: 1.5rem 0;
		color: #6b7280;
	}
	.prose pre {
		background-color: #1f2937;
		color: #f9fafb;
		padding: 1rem;
		border-radius: 0.5rem;
		overflow-x: auto;
		margin: 1.5rem 0;
	}
	.prose code {
		font-family: monospace;
		background-color: #f3f4f6;
		padding: 0.2rem 0.4rem;
		border-radius: 0.25rem;
		font-size: 0.9rem;
		color: #1f2937;
	}
	.prose a {
		color: #2570e9;
		text-decoration: none;
	}
	.prose a:hover {
		text-decoration: underline;
	}
</style>