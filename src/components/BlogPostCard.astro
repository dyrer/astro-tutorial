---
const { post } = Astro.props;
const formattedDate = new Date(post.frontmatter.date).toLocaleDateString('el-GR', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<div class="bg-white rounded-lg shadow-md border border-secondary-100 transition-all hover:shadow-xl hover:-translate-y-1 overflow-hidden">
  <a href={post.url} class="block">
    <div class="p-6">
      <p class="text-sm text-secondary-500 mb-2">{formattedDate}</p>
      <h2 class="text-2xl font-bold text-dark-900 mb-3">{post.frontmatter.title}</h2>
      <p class="text-secondary-700 mb-4 line-clamp-3">{post.frontmatter.description}</p>
      
      {post.frontmatter.tags && (
        <div class="flex flex-wrap gap-2 mb-4">
          {post.frontmatter.tags.map((tag) => (
            <span class="bg-primary-50 text-primary-700 px-3 py-1 rounded-full text-xs">{tag}</span>
          ))}
        </div>
      )}
      
      <div class="flex items-center text-accent-600 font-medium text-sm">
        <span>Read more</span>
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="ml-1 transition-transform group-hover:translate-x-1">
          <path d="M5 12h14"></path>
          <path d="M12 5l7 7-7 7"></path>
        </svg>
      </div>
    </div>
  </a>
</div>